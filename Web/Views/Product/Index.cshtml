@using Model.Models
@model List<Product>

<div class="container">

    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2>Product</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-secondary"><i class="bi bi-plus-circle"></i> Add New Product</a>
        </div>
    </div>
    <table class="table table-bordered table-striped table-primary" id="tblProduct">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Category</th>
                <th>List Price</th>
                <th>Price</th>
                <th>Price(50+)</th>
                <th>Price(100+)</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/Product/Index.js"></script>
}